<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php"
         backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnError="false"
         stopOnFailure="false"
         stopOnIncomplete="false"
         stopOnSkipped="false"
         stopOnRisky="false">
    <testsuites>
        <testsuite name="all">
            <directory suffix="Test.php">tests</directory>
        </testsuite>
        <testsuite name="unit">
            <directory suffix="Test.php">./tests/Unit</directory>
        </testsuite>
        <testsuite name="repositories">
            <directory suffix="Test.php">./tests/Repositories</directory>
        </testsuite>
        <testsuite name="features">
            <directory suffix="Test.php">./tests/Functional</directory>
        </testsuite>
    </testsuites>

    <logging>
        <log type="coverage-html" target="public/tests/coverage"/>
        <log type="testdox-html" target="public/tests/index.html"/>
    </logging>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="false">
            <directory suffix=".php">src</directory>
        </whitelist>
    </filter>
    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="APP_CACHE_LIMIT" value="false"/>

        <!--<env name="DB_DATABASE" value="intech-consulting-test"/>-->
        <env name="DB_USERNAME" value="amine"/>
        <env name="DB_PASSWORD" value="bensalah"/>

        <!--<env name="DB_DATABASE" value=":memory:"/>-->
        <!--<env name="DB_CONNECTION" value="sqlite"/>-->
        <!--<env name="DB_DATABASE" value="conduit_test"/>-->
    </php>
</phpunit>

{
    "name": "amine2233/slim-skeleton",
    "description": "A Slim Framework skeleton application for rapid development.",
    "keywords": [
        "microframework",
        "rest",
        "router",
        "psr7"
    ],
    "homepage": "http://github.com/amine2233/slim-skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Amine BENSALAH",
            "email": "amine.bensalah@outlook.com",
            "homepage": "http://intech-consulting.fr/"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.1",
        "ext-json": "*",
        "doctrine/orm": "^2.6",
        "monolog/monolog": "^1.25",
        "php-di/php-di": "^6.0",
        "php-di/slim-bridge": "^3.0",
        "slim/psr7": "^0.5",
        "slim/slim": "^4.2",
        "vlucas/phpdotenv": "^2.5"
    },
    "require-dev": {
        "phpunit/php-code-coverage": "^6.1",
        "phpunit/phpunit": "^7",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "config": {
        "sort-packages": true,
        "process-timeout": 0
    },
    "scripts": {
        "start": "php -S localhost:8888 -t public public/index.php",
        "phpcs": "phpcs --standard=phpcs.xml",
        "phpunit": "phpunit --colors=auto",
        "test": [
            "@phpunit",
            "@phpcs"
        ]
    }
}
